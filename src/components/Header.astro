    ---
    // Dies ist der Skript-Bereich für Astro-Komponenten (optional)
    let menuOpen = false;
    function toggleMenu() {
        menuOpen = !menuOpen;
        document.getElementById('mobile-menu').classList.toggle('hidden', !menuOpen);
        document.getElementById('menu-btn').setAttribute('aria-expanded', menuOpen);
        }
    ---
    <header class="bg-skyblue text-white shadow-md sticky top-0 z-50">
    <div class="container mx-auto flex justify-between items-center p-4">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-3">
            <img src="/kita-grossweil-image.png" alt="Kita Großweil" class="h-10 w-auto" />
            <span class="font-bold text-xl">Kita Großweil</span>
        </a>

        <!-- Desktop-Menü (auf mobilen Geräten versteckt) -->
        <nav class="hidden md:flex items-center">
            <ul class="flex space-x-6 items-center">
                <li><a href="/" class="px-4 py-2 block bg-skyblue text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Startseite</a></li>
                <li><a href="/ueber-uns/" class="px-4 py-2 block bg-hotpink text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Über uns</a></li>
                <li><a href="/paedagogik/" class="px-4 py-2 block bg-sunyellow text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Pädagogik</a></li>
                <li><a href="/anmeldung-kosten/" class="px-4 py-2 block bg-skyblue text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Anmeldung</a></li>
                <li><a href="/aktuelles/" class="px-4 py-2 block bg-hotpink text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Aktuelles</a></li>
                <li><a href="/galerie/" class="px-4 py-2 block bg-sunyellow text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Galerie</a></li>
                <li><a href="/kontakt/" class="px-4 py-2 block bg-skyblue text-white hover:bg-white hover:text-darkgray transition-colors duration-300">Kontakt</a></li>
                <!-- CTA -->
                <li><a href="/stellenanzeigen/" class="ml-6 px-4 py-2 block rounded-full bg-sunyellow text-darkgray hover:bg-hotpink hover:text-white transition-colors duration-300">
                Karriere
                </a></li>
            </ul>
        </nav>
        
        <!-- Burger-Menü-Schalter (auf mobilen Geräten sichtbar) -->
        <button id="menu-btn" class="md:hidden focus:outline-none" aria-expanded="false" onclick="toggleMenu()">
            <!-- Burger Icon -->
            <svg id="burger-icon" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <!-- X Icon -->
            <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <!-- <button class="burger-menu-toggle md:hidden" aria-controls="mobile-menu" aria-expanded="false">
            <span></span>
            <span></span>
            <span></span>
        </button> -->
    </div>
</header>

