<!-- Header mit dynamischer Höhe und "sticky" Position -->
<header id="main-header" class="bg-lightblue text-darkblue shadow-md sticky top-0 z-50 transition-all duration-300">
  <div class="container mx-auto flex justify-between items-center transition-all duration-300">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-3">
      <img src="/kita-grossweil-logo-kinderzeichnung-cropped.jpg" alt="Kita Großweil" class="h-20 w-auto" />
      <span class="font-bold text-xl">Kita Großweil</span>
    </a>

    <!-- Desktop-Menü (auf mobilen Geräten versteckt) -->
    <nav class="hidden md:flex items-center">
      <ul class="flex">
        <li>
          <a href="/ueber-uns/" class="flex items-center justify-center px-4 py-2 hover:border-b-2 hover:border-darkblue transition-colors">Über uns</a>
        </li>
        <li>
          <a href="/paedagogik/" class="flex items-center justify-center px-4 py-2 hover:bg-darkblue hover:text-lightblue transition-colors">Pädagogik</a>
        </li>
        <li>
          <a href="/anmeldung-kosten/" class="flex items-center justify-center px-4 py-2 hover:bg-darkblue hover:text-lightblue transition-colors">Anmeldung</a>
        </li>
        <li>
          <a href="/aktuelles/" class="flex items-center justify-center px-4 py-2 hover:bg-darkblue hover:text-lightblue transition-colors">Aktuelles</a>
        </li>
        <li>
          <a href="/galerie/" class="flex items-center justify-center px-4 py-2 hover:bg-darkblue hover:text-lightblue transition-colors">Galerie</a>
        </li>
        <li>
          <a href="/kontakt/" class="flex items-center justify-center px-4 py-2 hover:bg-darkblue hover:text-lightblue transition-colors">Kontakt</a>
        </li>
        <!-- CTA -->
        <li>
          <a href="/stellenanzeigen/" class="flex items-center justify-center px-4 py-2 rounded-full bg-darkyellow text-darkblue hover:bg-sunyellow hover:text-darkblue transition-colors">
            Karriere
          </a>
        </li>
      </ul>
    </nav>
    
    <!-- Burger-Menü-Schalter (auf mobilen Geräten sichtbar) -->
    <button class="md:hidden focus:outline-none relative h-8 w-8 text-darkgray" aria-controls="mobile-menu" aria-expanded="false" id="menu-btn">
        <!-- Burger Icon -->
        <svg id="burger-icon" xmlns="http://www.w3.org/2000/svg" class="h-full w-full absolute top-0 left-0 transition-opacity duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <!-- X Icon -->
        <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-full w-full absolute top-0 left-0 hidden transition-opacity duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
  </div>
</header>

