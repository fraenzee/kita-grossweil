---
const { image, title, description, buttonText, buttonLink } = Astro.props;
---

<article class="card flex flex-col h-full bg-brand-soft overflow-hidden rounded-2xl shadow-md hover:shadow-lg transition-transform hover:-translate-y-1 duration-300 p-0">
  {image && (
    <img 
      src={image} 
      alt={title} 
      class="w-full h-48 object-cover" 
      loading="lazy"
    />
  )}

  <div class="p-6 flex flex-col flex-1 text-left">
    <h3 class="text-brand-secondary text-xl font-semibold mb-2">{title}</h3>
    <p class="text-brand-text text-base mb-4 flex-1">{description}</p>

    {buttonText && buttonLink && (
      <a 
        href={buttonLink} 
        class="btn btn-primary mt-auto inline-block text-center focus:outline-none focus:ring-2 focus:ring-brand-primary focus:ring-offset-2"
      >
        {buttonText} â†’
      </a>
    )}
  </div>
</article>