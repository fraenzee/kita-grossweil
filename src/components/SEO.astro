---
const {
  title = "Kita St. Georg Großweil",
  description = "Kindergarten & Krippe St. Georg in Großweil - Ein Ort zum Spielen, Lernen und Wachsen für Kinder von der Krippe bis zur Einschulung.",
  robots = "noindex, follow", // default noindex for now
  schema = null,
  ogImage = "/kita-st-georg-grossweil-foto.jpg",
  canonical,
} = Astro.props;

const fullTitle = title
  ? `${title} - Kita St. Georg Großweil`
  : "Kita St. Georg Großweil";

const url = canonical ?? Astro.url.href;
---

<title>{fullTitle}</title>
<meta name="description" content={description} />
<meta name="robots" content={robots} />

<link rel="canonical" href={url} />

<!-- OpenGraph -->
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:type" content="website" />
<meta property="og:url" content={url} />

<!-- JSON-LD Schema.org -->
{schema && (
  <script type="application/ld+json" set:html={JSON.stringify(schema, null, 2)}></script>
)}