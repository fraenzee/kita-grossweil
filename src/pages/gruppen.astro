---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const pages = await getCollection('pages');
const gruppenPage = pages.find(page => page.slug === 'gruppen');

if (!gruppenPage) {
  return Astro.redirect('/404');
}

const { Content } = await gruppenPage.render();
const { title, subtitle, gruppen } = gruppenPage.data;
---

<BaseLayout title={title}>
  <section class="bg-white rounded-2xl shadow-lg p-8 md:p-12 mb-12">
    <h1 class="text-4xl font-semibold text-adobedarkblue mb-2 text-center">{title}</h1>
    <p class="text-lg text-adobeblack text-center mb-12">{subtitle}</p>

    <div class="prose max-w-3xl mx-auto mb-16 text-center">
      <Content />
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-10 max-w-6xl mx-auto">
      {gruppen.map(gruppe => (
        <div class="relative rounded-3xl p-[3px] bg-gradient-to-br from-adobeblue/20 to-adobepink/20 shadow-lg transition-transform duration-300">
          <div class="bg-adobelightblue/50 rounded-3xl overflow-hidden"></div>
        
          <div class="p-4"> <img src={gruppe.bild} alt={gruppe.name} class="rounded-full border-4 border-adobepink"/></div>

          <div class="relative p-6 text-center">
          {/* <div class="relative m-4 p-2 text-center bg-adobelightblue/50 rounded-3xl"> */}
            <h2 class="text-2xl font-bold text-adobedarkblue mb-3 tracking-widest">
              {gruppe.name}
            </h2>
            <p class="text-adobeblack leading-relaxed">
              {gruppe.intro}
            </p>
          </div>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>