---
// Importiere das Basis-Layout
import BaseLayout from '../layouts/BaseLayout.astro';
// Importiere die Funktion zum Abrufen von Inhalten aus der "pages"-Sammlung
import { getCollection } from 'astro:content';

// Lade den Inhalt der "Aktuelles"-Seite aus der Markdown-Datei
const pages = await getCollection('pages');
const aktuellesPage = pages.find(page => page.slug === 'aktuelles'); // Finde die "aktuelles.md" Seite

// Stelle sicher, dass die Seite gefunden wurde, sonst leite um oder zeige Fehler
if (!aktuellesPage) {
  return Astro.redirect('/404'); // Oder eine andere Fehlerbehandlung
}

// Extrahiere den gerenderten Inhalt
const { Content } = await aktuellesPage.render();
---
<BaseLayout title={aktuellesPage.data.title}>
    <section class="bg-white rounded-lg shadow-lg p-8 mb-8">
        <h1 class="mb-4">{aktuellesPage.data.title}</h1>
        <div class="text-lg leading-relaxed mb-6">
            <Content /> <!-- Hier wird der Inhalt aus der Markdown-Datei eingefÃ¼gt -->
        </div>
    </section>
</BaseLayout>
