---
// Importiere die Header- und Footer-Komponenten
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from "../components/Breadcrumbs.astro";
import SEO from "../components/SEO.astro";
// Importiere die globalen Tailwind-Styles
import '../styles/global.css';

// Props für den Titel der Seite
const { title, description, robots, schema } = Astro.props;
---
<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <SEO
    title={title}
    description={description}
    robots={robots}
    schema={schema}
  />

  <link rel="icon" href="/st-georg-kita-ritter-babydrache-favicon.png" type="image/x-icon">
  <link rel="shortcut icon" href="/st-georg-kita-ritter-babydrache-favicon.png" type="image/x-icon">
  <!-- Optional: Apple Touch Icon -->
  <link rel="apple-touch-icon" sizes="180x180" href="/st-georg-kita-ritter-babydrache-favicon.png">
  
  <!-- Preload für kritische Fonts
   <link rel="preload" 
      href="https://fonts.gstatic.com/s/patrickhand/v24/LDI1apSQOAYtSuYWp8ZhfYeMWcjKm7sp8g.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin>
   -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Patrick+Hand&family=Baloo+2:wght@400;600;700&family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  <!--
  <link href="https://fonts.googleapis.com/css2?family=Caveat+Brush&family=Patrick&family=Baloo+2:wght@400;600;700&family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  Wenn du Baloo 2 und Nunito Sans nutzt, ergänze sie hier -->
  <!-- Beispiel:
  <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;600;700&family=Nunito+Sans:wght@400;600;700&display=swap" rel="stylesheet">
  -->
  <!-- <link href="https://fonts.googleapis.com/css2?family=Caveat+Brush&display=swap" rel="stylesheet"> -->
</head>
<body class="bg-brand-surface text-brand-text flex flex-col min-h-screen">

  <Header /> <!-- Fügt die Header-Komponente ein -->

  <main class="flex-grow container mx-auto p-6">
    <Breadcrumbs />
    <slot /> <!-- Hier wird der Inhalt der jeweiligen Seite eingefügt -->
  </main>

  <Footer /> <!-- Fügt die Footer-Komponente ein -->

  <!-- Optional: falls du ein separates Burger-Menü-Skript verwendest.
       Wenn dein Header.astro bereits den Drawer steuert, entferne diese Zeile. -->
  <!-- <script src="../scripts/burgerMenu.js"></script> -->
  
</body>

<!-- JSON-LD für SEO -->
<!-- <script type="application/ld+json" is:inline>
  {breadcrumbJsonLd}
</script> -->

</html>
